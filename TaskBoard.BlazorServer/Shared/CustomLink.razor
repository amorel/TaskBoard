@using Microsoft.AspNetCore.Components;
@using System.ComponentModel.DataAnnotations;

<div class="survey-container">
    <i class="oi oi-pencil me-2" aria-hidden="true"></i>
    <a href="@Url" target="_blank" rel="noopener noreferrer">@Text</a> @AdditionalText
</div>

@code {
    [Parameter, Required]
    public string Url { get; set; } = null!;

    [Parameter, Required]
    public string Text { get; set; } = null!;

    [Parameter, Required]
    public string AdditionalText { get; set; } = null!;
}

<style>
    .survey-container {
        background-color: #f0f0f0;
        padding: 1rem;
        border-radius: 4px;
        margin-top: 1rem;
    }

    .survey-container a {
        color: #333;
        text-decoration: underline;
        font-weight: bold;
    }

    .survey-container i {
        margin-right: 0.5rem;
    }
</style>
